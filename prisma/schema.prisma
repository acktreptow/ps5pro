// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model ConfirmedGame {
  id          String  @default(cuid()) @id
  title       String
  genre       String
  developer   String
  publisher   String
  psStudios   Boolean @default(false)
  psvr2       Boolean @default(false)
  release     String
  metacritic  Int
  published   Boolean @default(false)
}

model DetailedGame {
  id          String  @default(cuid()) @id
  title       String
  pageTitle   String?
  urlPath     String  @unique
  genre       String
  developer   String
  publisher   String?
  psStudios   Boolean @default(false)
  psvr2       Boolean @default(false)
  release     String
  metacritic  Int
  pssr        Boolean @default(false)
  rt          Boolean @default(false)
  rtTypes     String?
  topRes      String
  topFps      String
  modes       Json?
  extraInfo   String?
  published   Boolean @default(false)
}

model UnconfirmedGame {
  id          String  @default(cuid()) @id
  title       String
  genre       String
  developer   String
  publisher   String
  psStudios   Boolean @default(false)
  psvr2       Boolean @default(false)
  release     String
  metacritic  Int
  published   Boolean @default(false)
}